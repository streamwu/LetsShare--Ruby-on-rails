<div class="page-header">
  <h1>Edit Movie</h1>
</div>

<div class="row">
  <div class="col-md-6">

    <%= form_tag movies_url, :method => 'patch' do %>

      <div class="form-group">
        <%= label_tag :title %>
        <%= text_field_tag :title, @movie.title, class: 'form-control', placeholder: 'Enter movie title here' %>
      </div>

      <div class="form-group">
        <%= label_tag :poster_url %>
        <%= url_field_tag :poster_url, @movie.poster_url, class: 'form-control', placeholder: 'Enter URL to a movie poster image' %>
      </div>

      <div class="form-group">
        <%= label_tag :year %>
        <%= text_field_tag :year, @movie.year, class: 'form-control', placeholder: "Enter year here" %>
      </div>
      
      <div class="form-group">
        <%= label_tag :duration %>
        <%= text_field_tag :duration, @movie.duration, class: 'form-control', placeholder: "Enter duration here" %>
      </div>

      <div class="form-group">
        <%= label_tag :official_website %>
        <%= text_field_tag :official_website, @movie.official_website, class: 'form-control', placeholder: "Enter official_website here" %>
      </div>

      <%= submit_tag 'Update Movie', class: 'btn btn-default' %>
    <% end %>

  </div>
</div>

