<br><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>Sign in</h4><br>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: 'form-control', placeholder:"Enter your email address here" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control", placeholder:"Enter password here" %>
      </div>
      <%= submit_tag "Sign in", class:"btn btn-success" %>
    <% end %>
  </div>
</div>