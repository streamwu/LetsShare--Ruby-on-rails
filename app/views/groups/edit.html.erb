<br><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>Update the group here</h4><br>
    <%= form_tag group_path(@group.id), :method => 'patch' do %>
      <div class="form-group">
        <%= label_tag :title %>
        <%= text_field_tag :title, @group.title, class: 'form-control', placeholder: "Enter title here" %>
      </div>
      <div class="form-group">
        <%= label_tag :description %>
        <%= text_field_tag :description, @group.description, class: 'form-control', placeholder:"Enter the description here" %>
      </div>
      <div class="form-group">
        <%= label_tag :photo_url %>
        <%= text_field_tag :photo_url, @group.photo_url, class: "form-control", placeholder:"Enter photo url here" %>
      </div>
      
      <%= submit_tag "Update", class: "btn btn-info btn-sm" %>
    <% end %>
  </div>
</div>





