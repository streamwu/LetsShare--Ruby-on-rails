<br><br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>Sign up with Email</h4><br>
    <%= form_tag users_path do %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, "", class: 'form-control', placeholder:"Enter your name here" %>
      </div>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: 'form-control', placeholder:"Enter your email address here" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control", placeholder:"Enter password here" %>
      </div>
      <div class="form-group">
        <%= label_tag :rePassword, "Confirm password" %>
        <%= password_field_tag :rePassword, "", class: "form-control", placeholder:"Retype your password here" %>
      </div>
      <%= submit_tag "Sign up", class:"btn btn-success" %>
    <% end %>
  </div>
</div>





